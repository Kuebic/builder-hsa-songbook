# .env.example - Copy this file to .env and fill in your values
# This file documents all environment variables used by the application

# Builder.io Public API Key
# Get your key from: https://www.builder.io/c/docs/using-your-api-key
VITE_PUBLIC_BUILDER_KEY=your_builder_public_key_here

# Clerk Authentication (Required)
# Get your keys from: https://dashboard.clerk.dev
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_key_here

# MongoDB Connection (Required for backend)
# Example: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/hsa-songbook

# Server Configuration
PORT=3000
NODE_ENV=development

# Test message for health checks
PING_MESSAGE="ping pong"